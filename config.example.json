{
  "editor": {
    "tab_width": 4,
    "insert_spaces": true,
    "line_numbers": true,
    "relative_line_numbers": false,
    "cursor_style": "block",
    "word_wrap": false,
    "auto_save": false,
    "trim_trailing_whitespace": true,
    "insert_final_newline": true
  },
  "theme": {
    "name": "gruvbox",
    "variant": "dark"
  },
  "lsp": {
    "enabled": true,
    "servers": {
      "zig": {
        "command": "zls",
        "filetypes": ["zig"]
      },
      "rust": {
        "command": "rust-analyzer",
        "filetypes": ["rust"]
      }
    }
  },
  "keybindings": {
    "leader": "\\",
    "custom": {
      "<leader>ff": ":FuzzyFinder",
      "<leader>gg": ":GitStatus"
    }
  }
}
